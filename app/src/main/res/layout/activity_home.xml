<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codemagos.policeapp.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_news"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:onClick="navigation"
                android:text="Latest News" />

            <Button
                android:id="@+id/btn_complaints"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:onClick="navigation"
                android:text="Complaint's" />

            <Button
                android:id="@+id/btn_law"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:onClick="navigation"
                android:text=" Laws" />

            <Button
                android:id="@+id/btn_request"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:onClick="navigation"
                android:text="Service Request" />

            <Button
                android:id="@+id/btn_numbers"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:onClick="navigation"
                android:text="Important Numbers" />

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:onClick="navigation"
                android:text="Settings" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
